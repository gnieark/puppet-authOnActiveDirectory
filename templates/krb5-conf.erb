[libdefaults]
        default_realm = <%= scope.lookupvar('authonad::nomnetbios') -%>
        default_tkt_enctypes = des3-hmac-sha1 des-cbc-crc des-cbc-md5 aes256-cts arcfour-hmac-md5
        default_tgs_enctypes = des3-hmac-sha1 des-cbc-crc des-cbc-md5 aes256-cts arcfour-hmac-md5


[realms]
        <%= scope.lookupvar('authonad::nomnetbios') -%> = {
	  kdc = <%= scope.lookupvar('authonad::srvad') -%>.<%= scope.lookupvar('authonad::suffixedns') -%>
	  
	  admin_server = <%= scope.lookupvar('authonad::srvad') -%>.<%= scope.lookupvar('authonad::suffixedns') -%>
	  
	  default_domain = <%= scope.lookupvar('authonad::suffixedns') -%>
	  
	 }
        
[domain_realm]
        .<%= scope.lookupvar('authonad::suffixedns') -%> = <%= scope.lookupvar('authonad::nomnetbios') -%>

[login]
        krb4_convert = true
        krb4_get_tickets = false
